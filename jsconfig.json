{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src"],
      "style/*": ["./src/style/*"],
      "components/*": ["./src/components/*"],
      "assets/*": ["./src/assets/*"],
      "constants": ["./src/constants"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
